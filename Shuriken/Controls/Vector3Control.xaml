<UserControl x:Class="Shuriken.Controls.Vector3Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shuriken.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="500">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Padding" Value="8 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="X"/>
        <TextBlock Grid.Column="2" Text="Y"/>
        <TextBlock Grid.Column="4" Text="Z"/>

        <TextBox Name="XTextBox" Grid.Column="1" Text="{Binding Value.X}"/>
        <TextBox Name="YTextBox" Grid.Column="3" Text="{Binding Value.Y}"/>
        <TextBox Name="ZTextBox" Grid.Column="5" Text="{Binding Value.Z}"/>
    </Grid>
</UserControl>
